<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.demo.view.UsersController"
            styleClass="view-background"
            stylesheets="@/style.css">

    <top>
        <VBox spacing="5">
            <padding>
                <Insets top="20" left="20" right="20" bottom="10"/>
            </padding>
            <Label text="Gestione Staff" styleClass="text-title" style="-fx-font-size: 24px;"/>
            <Label text="Aggiungi o rimuovi membri del team" styleClass="text-muted" style="-fx-font-size: 14px;"/>
        </VBox>
    </top>

    <center>
        <TableView fx:id="usersTable" style="-fx-background-color: transparent;">
            <columns>
                <TableColumn text="Username" prefWidth="200">
                    <cellValueFactory>
                        <PropertyValueFactory property="username"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn text="Ruolo" prefWidth="150">
                    <cellValueFactory>
                        <PropertyValueFactory property="role"/>
                    </cellValueFactory>
                </TableColumn>

            </columns>

            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>

            <BorderPane.margin>
                <Insets left="20" right="20" bottom="10"/>
            </BorderPane.margin>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="15" right="20" bottom="20" left="20"/>
            </padding>

            <TextField fx:id="txtUser" promptText="Username" prefWidth="150"/>
            <TextField fx:id="txtPass" promptText="Password" prefWidth="150"/>
            <ComboBox fx:id="comboRole" promptText="Seleziona Ruolo" prefWidth="150"/>

            <Button text="Aggiungi" onAction="#handleAdd" styleClass="btn-primary"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="Rimuovi Selezionato" onAction="#handleDelete"
                    style="-fx-background-color: #E02E2E; -fx-text-fill: white; -fx-cursor: hand;"/>

            <Button text="Indietro" onAction="#goBack" styleClass="dashboard-btn"/>
        </HBox>
    </bottom>

</BorderPane>