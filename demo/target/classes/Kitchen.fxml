<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.demo.view.KitchenController"
            style="-fx-background-color: #F8F9FA;">
    <Label text="Kitchen To-do" AnchorPane.topAnchor="25.0" AnchorPane.leftAnchor="25.0"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" />

    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;"
                hbarPolicy="NEVER"
                AnchorPane.topAnchor="70.0" AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

        <content>
            <VBox fx:id="ordersContainer" spacing="5"
                  style="-fx-padding: 0 25 25 25; -fx-background-color: transparent;" />
        </content>

    </ScrollPane>

</AnchorPane>