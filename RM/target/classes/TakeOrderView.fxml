<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane stylesheets="@/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.rm.view.TakeOrderController">

    <!-- HEADER -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <VBox spacing="2">
                <Label fx:id="lblSubtitle" style="-fx-font-size: 14px; -fx-text-fill: #888;" text="Waiter" />
                <Label fx:id="lblTitle" style="-fx-font-size: 22px; -fx-font-weight: bold;" />
            </VBox>

            <Region HBox.hgrow="ALWAYS" />

            <Button onAction="#handleCancel" style="-fx-background-color: #E02E2E; -fx-text-fill: white;" text="Cancel" />
        </HBox>
    </top>

    <!-- LISTA PRODOTTI -->
    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox fx:id="productsContainer" spacing="5">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>
            </VBox>
        </ScrollPane>
    </center>

    <!-- BOTTOM -->
    <bottom>
        <StackPane alignment="CENTER">
            <padding>
                <Insets bottom="10" />
            </padding>

            <Button fx:id="btnSend" onAction="#handleSend" style="-fx-font-size: 16px; -fx-font-weight: bold;" styleClass="dashboard-btn" stylesheets="@style.css" text="Send Order" />
        </StackPane>
    </bottom>

</BorderPane>
