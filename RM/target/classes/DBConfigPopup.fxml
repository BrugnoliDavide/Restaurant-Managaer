<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" styleClass="login-pop-up-setup-connection" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.rm.view.component.DBConfigPopupController">

    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <Label styleClass="text-title" text="Configurazione Database" />

    <Label fx:id="lblPasswordStatus"
           text=""
           style="-fx-font-size: 11px;"
           GridPane.columnIndex="1"
           GridPane.rowIndex="5"/>


    <TextField fx:id="addressField" promptText="Indirizzo " styleClass="input-standard" />

    <TextField fx:id="portField" promptText="Porta " styleClass="input-standard" />

    <TextField fx:id="dbNameField" promptText="Nome database" styleClass="input-standard" />

    <TextField fx:id="usernameField" promptText="Username" styleClass="input-standard" />

    <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-standard" />

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="cancelButton" styleClass="btn-secondary" stylesheets="@style.css" text="Annulla" />

        <Button fx:id="saveButton" defaultButton="true" styleClass="btn-save" stylesheets="@style.css" text="Salva" textFill="WHITE" />
    </HBox>

</VBox>
