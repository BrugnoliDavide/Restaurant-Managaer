<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.SVGPath?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.rm.view.KitchenController"
            styleClass="view-background" stylesheets="@/style.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <top>
        <HBox alignment="CENTER_LEFT" spacing="15">
            <padding><Insets bottom="20"/></padding>

            <StackPane fx:id="profileBtn" style="-fx-cursor: hand;" onMouseClicked="#handleProfileMenu">
                <Circle fx:id="profileCircle" radius="25" fill="LIGHTBLUE" stroke="TOMATO" strokeWidth="0" />
            </StackPane>

            <VBox spacing="2">
                <Label fx:id="lblHeaderName" style="-fx-font-size: 16px;" styleClass="text-title" text="..." />
                <Label fx:id="lblHeaderRole" style="-fx-font-size: 14px;" styleClass="text-body" text="Cucina" />
            </VBox>

            <Label fx:id="lblWelcomeMsg" text="..." style="-fx-text-fill: #888; -fx-padding: 0 0 0 20; -fx-font-style: italic;"/>

            <Region HBox.hgrow="ALWAYS" />

            <StackPane onMouseClicked="#refreshData" style="-fx-cursor: hand;">
                <SVGPath content="M17.65 6.35C16.2 4.9 14.21 4 12 4c-4.42 0-7.99 3.58-7.99 8s3.57 8 7.99 8c3.73 0 6.84-2.55 7.73-6h-2.08c-.82 2.33-3.04 4-5.65 4-3.31 0-6-2.69-6-6s2.69-6 6-6c1.66 0 3.14.69 4.22 1.78L13 11h7V4l-2.35 2.35z"
                         scaleX="1.2" scaleY="1.2" styleClass="icon-svg" />
            </StackPane>

        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
            <content>
                <VBox fx:id="ordersContainer" spacing="10" style="-fx-background-color: transparent;">
                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>