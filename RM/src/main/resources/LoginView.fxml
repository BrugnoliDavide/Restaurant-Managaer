<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<?import javafx.scene.shape.Circle?>

<StackPane
        xmlns="http://javafx.com/javafx/17.0.12"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.example.RM.view.LoginController"
        styleClass="login-root-fixed"
        stylesheets="@/style.css">

    <VBox alignment="CENTER_LEFT"
          maxHeight="500"
          maxWidth="400"
          styleClass="login-card-fixed"
          spacing="20">

        <Circle fx:id="dbStatusCircle"
                radius="6"
                fill="YELLOW"
                layoutX="15"
                layoutY="15"/>




        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <ImageView preserveRatio="true" fitHeight="50">
                <image>
                    <Image url="@/logo.png"/>
                </image>
            </ImageView>

        </HBox>


        <VBox alignment="TOP_RIGHT" spacing="10">
            <FontIcon fx:id="gearIcon"
                      iconLiteral="fas-cog"
                      styleClass="login-gear-icon"/>
        </VBox>



        <VBox spacing="6">
            <Label text="Username" styleClass="login-label-fixed"/>
            <TextField fx:id="userField"
                       promptText="username"
                       styleClass="login-input-fixed"/>
            <VBox.margin>
                <Insets bottom="25"/>
            </VBox.margin>
        </VBox>

        <VBox spacing="8">
            <Label text="Password" styleClass="login-label-fixed"/>
            <PasswordField fx:id="passField"
                           promptText="password"
                           styleClass="login-input-fixed"/>
            <VBox.margin>
                <Insets bottom="40"/>
            </VBox.margin>
        </VBox>


        <Button text="Sign In"
                maxWidth="Infinity"
                onAction="#handleLogin"
                styleClass="login-btn-fixed"/>

    </VBox>
</StackPane>